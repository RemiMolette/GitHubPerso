\f0\fs24 \cf0 \cb1 CC=gcc\
CFLAGS=-W -Wall -ansi -pedantic\
LDFLAGS=\
EXEC=test\
SRC= $(wildcard *.c)\
OBJ= $(SRC:.c=.o)\
\
all: $(EXEC)\
\
hello: $(OBJ)\
	$(CC) -o $@ $^ $(LDFLAGS)\
\
main.o: hello.h\
\
%.o: %.c\
	$(CC) -o $@ -c $< $(CFLAGS)\
\
.PHONY: clean mrproper\
\
clean:\
	rm -rf *.o\
\
mrproper: clean\
	rm -rf $(EXEC)}